  <xacro:property name="joint4_origin_rpy" value="${pi/2} 0 0"/>
  <xacro:property name="joint4_axis_xyz" value="0 0 1"/>
  <xacro:property name="joint4_lower_limit" value="${-120/180*pi}"/>
  <xacro:property name="joint4_upper_limit" value="${120/180*pi}"/>
  <xacro:property name="joint4_velocity_limit" value="${75*pi/180}"/>
