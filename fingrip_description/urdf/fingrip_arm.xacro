  <xacro:property name="joint6_origin_xyz" value="0.0 0.0 0.2155"/>
  <xacro:property name="joint6_origin_rpy" value="${pi/2} 0 0"/>
  <xacro:property name="joint6_axis_xyz" value="0 0 1"/>
  <xacro:property name="joint6_lower_limit" value="${-120/180*pi}"/>
  <xacro:property name="joint6_upper_limit" value="${120/180*pi}"/>
  <xacro:property name="joint6_velocity_limit" value="${135*pi/180}"/>
  <xacro:property name="joint6_torque_limit" value="12"/>
  <xacro:property name="joint6_damping" value="3.0"/>
