  <xacro:property name="joint5_type" value="revolute"/>
  <xacro:property name="joint5_origin_xyz" value="0.0 0.1845 0.0"/>
  <xacro:property name="joint5_origin_rpy" value="${pi/2} 0 ${pi}"/>
  <xacro:property name="joint5_axis_xyz" value="0 0 1"/>
  <xacro:property name="joint5_lower_limit" value="${-170*pi/180}"/>
  <xacro:property name="joint5_upper_limit" value="${170*pi/180}"/>
  <xacro:property name="joint5_velocity_limit" value="${130*pi/180}"/>
  <xacro:property name="joint5_torque_limit" value="12"/>
  <xacro:property name="joint5_damping" value="3.0"/>
